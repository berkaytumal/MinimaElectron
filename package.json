{
  "name": "minima-electron",
  "productName": "Minima Electron",
  "version": "0.1.2",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node postscript.js",
    "reset": "node -e \"const { app } = require('electron'); const path = require('path'); const dataPath = app?.isPackaged ? path.join(app.getPath('userData'), 'minidata') : './minidata1'; require('fs').rmSync(dataPath, { recursive: true, force: true }); require('keytar').deletePassword('minima-electron','mds-password').then(()=>console.log('Password and data directory removed.'))\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:mac": "electron-builder --mac --universal",
    "make:win": "electron-builder --win",
    "make:linux": "electron-builder --linux",
    "install:mac": "npm run make:mac && APP_NAME=Minima.app && SRC=dist/mac-universal/$APP_NAME && DEST=/Applications/$APP_NAME && [ -d \"$SRC\" ] && rm -rf \"$DEST\" && mv \"$SRC\" \"$DEST\" && echo 'Installed/Updated $APP_NAME in /Applications.'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Minima blockchain desktop application",
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "keytar": "^7.9.0"
  },
  "build": {
    "appId": "io.minima.electron",
    "productName": "Minima",
    "files": [
      "**/*",
      "!minidata1/**/*",
      "!minidata/**/*"
    ],
    "extraResources": [
      "minima.jar"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.iconset",
      "artifactName": "${productName}-${version}-universal.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.iconset/icon_256x256.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.iconset/icon_512x512.png",
      "category": "Finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
